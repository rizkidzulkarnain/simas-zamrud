<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorFormMasterElementBackground"
    android:layout_width="match_parent"
    android:id="@+id/itemContainer"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:id="@+id/layoutRow"
        android:orientation="vertical">


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/formElementTitle"
            android:background="#EFEFF3"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:paddingBottom="8dp"
            android:paddingLeft="5sp"
            android:fontFamily="sans-serif-thin"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorFormMasterHeaderText"
            android:textSize="@dimen/headerTextSize"
            android:textStyle="bold"
            tools:text="Signature" />


        <ImageView
            android:id="@+id/formElementValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/formElementTitle"
            android:background="@null" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorFormMasterDivider" />

</LinearLayout>