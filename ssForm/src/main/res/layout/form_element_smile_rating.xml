<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorFormMasterElementBackground"
    android:layout_width="match_parent"
    android:id="@+id/itemContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutRow"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFF3"
            android:paddingBottom="8dp"
            android:paddingLeft="5sp"
            android:paddingRight="16dp"
            android:paddingTop="10dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/formElementTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/colorFormMasterHeaderText"
                android:textSize="@dimen/headerTextSize"
                android:textStyle="bold"
                tools:text="Personal Info" />

        </LinearLayout>


        <com.hsalf.smilerating.SmileRating
            android:id="@+id/ratingView"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:angryColor="#f29a68"
            app:drawingColor="#353431"
            app:normalColor="#f2dd68"
            app:isIndicator="false"
            app:placeHolderBackgroundColor="#e6e8ed"
            app:placeHolderSmileColor="#ffffff"
            app:textNonSelectionColor="#AEB3B5"
            app:textSelectionColor="#000000" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorFormMasterDivider" />

</LinearLayout>