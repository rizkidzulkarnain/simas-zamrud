<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.applikeysolutions.cosmocalendar.view.CalendarView
            android:id="@+id/calendar_view_keuangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btGetData"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendar_view_keuangan"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:padding="@dimen/activity_vertical_margin"
            android:text="@string/get_data"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/layoutPemasukan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btGetData"
            android:background="@color/colorPrimary"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtPemasukan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.9"
                android:text="Pemasukan"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/addPemasukan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/add_outline" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCombinePemasukan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutPemasukan"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_below="@id/layoutPemasukan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtErrorPemasukan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/error_nodata"
                    android:textColor="@color/A400red"
                    android:visibility="visible" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvDataPemasukan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/layoutTotalPemasukan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mt_gray"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:textStyle="bold"
                    android:text="Total"/>

                <TextView
                    android:id="@+id/txtTotalPemasukan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat"
                    tools:text="Rp. 100.000"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPengeluaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutCombinePemasukan"
            android:background="@color/colorPrimary"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtPengeluaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.9"
                android:text="Pengeluaran"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/addPengeluaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/add_outline" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCombinePengeluaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutPengeluaran"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/layoutPengeluaran"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtErrorPengeluaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/error_nodata"
                    android:textColor="@color/A400red"
                    android:visibility="visible" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvDataPengeluaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutTotalPengeluaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mt_gray"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:textStyle="bold"
                    android:text="Total"/>

                <TextView
                    android:id="@+id/txtTotalPengeluaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:textAlignment="textEnd"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat"
                    tools:text="Rp. 100.000"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutJumlah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutCombinePengeluaran"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="Saldo Akhir"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtTotalAkhir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:textColor="@color/white"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>

