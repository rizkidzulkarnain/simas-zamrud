<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvSpinnerSurat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:orientation="vertical" />
        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/rvSpinnerSurat"
            android:id="@+id/rvSpinnerAyat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:orientation="vertical" />
        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/rvSpinnerAyat"
            android:id="@+id/rvSpinnerJuz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:orientation="vertical" />
        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/rvSpinnerJuz"
            android:id="@+id/rvAddLiqo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:orientation="vertical" />
    </RelativeLayout>
</ScrollView>